<section class="movie-details">
  <div class="image">
    <%= main_image(@movie) %>
    <% if current_user %>
      <div class="faves">
        <%= fav_or_unfav_button(@movie, @fanned) %>
        <div class="count">
          <%= @fans.count %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <div class="reviews">
      <%= render "shared/stars", percent: @movie.average_stars_as_percent %>
      <%= link_to pluralize(@movie.reviews.size, "review"),
                  movie_reviews_path(@movie) %>
    </div>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
      <tr>
        <th>Released On</th>
        <td><%= @movie.released_on.to_formatted_s(:long) %></td>
      </tr>
    </table>
    <%= link_to "Write Review", new_movie_review_path(@movie),
              class: 'review' %>
  </div>
  <aside>
    <% if @fans.present? %>
      <h4>Fans</h4>
      <ul>
        <% @fans.each do |fan| %>
          <li>
            <%= link_to fan.name, fan %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <% if @genres.present? %>
      <h4>Genres</h4>
      <ul>
        <% @genres.each do |genre| %>
          <li>
            <%= genre.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </aside>
</section>

<%= render 'shared/admin_buttons', object: @movie %>
