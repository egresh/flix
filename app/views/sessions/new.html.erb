<h1>Sign In</h1>
<p>
  Don't have an account yet? <%= link_to "Sign Up!", signup_path %>
</p>
<%= form_with(url: session_path, local: true) do |f| %>
  <%= f.label :username_or_email, "Email or Username" %>
  <%= f.text_field :username_or_email, autofocus: true, required: true %>
  <%= f.label :password %>
  <%= f.password_field :password, required: true %>
  <%= f.submit "Sign In" %>
<% end %>
